{
  "manifest_version": 3,
  "name": "Conversation Navigation Bar",
  "version": "0.2.0",
  "description": "Adds a right-side navigation bar for ChatGPT and Gemini chats, allowing quick jump to any user message.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "src/content/content-script.js"
      ],
      "css": [
        "src/content/navigation.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/navigation.css"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ]
    }
  ]
}